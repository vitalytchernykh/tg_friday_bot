# Friday Bot Environment Configuration
# Copy this file to .env and fill in your values

# Required: Telegram Bot Token from @BotFather
BOT_TOKEN=your_telegram_bot_token_here

# Required: Chat ID where bot should post images
CHAT_ID=your_chat_id_here

# Optional: Posting schedule (24-hour format)
POST_HOUR=9
POST_MINUTE=0

# Optional: Images directory
IMAGES_DIR=sample_images

# Optional: Check interval in minutes
CHECK_INTERVAL=30

# Optional: Timezone (e.g., UTC, America/New_York, Europe/London)
TIMEZONE=UTC

# Optional: Enable debug logging
DEBUG=false